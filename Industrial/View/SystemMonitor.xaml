                    Foreground="#44FFFFFF"
                    Text="实时日志" />
                <TextBlock Grid.Row="2"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="11">
                    <Hyperlink Foreground="#66DFFDFF">详情</Hyperlink>
                </TextBlock>
                <ItemsControl Grid.Row="3"
                    AlternationCount="2"
                    ItemsSource="{Binding Source={StaticResource smVM}, Path=LogList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Name="back"
                                    Background="#11FFFFFF"
                                    CornerRadius="14"
                                    Visibility="Collapsed" />
                                <Grid
                                    Height="28"
                                    TextBlock.FontSize="10"
                                    TextBlock.Foreground="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding RowNumber, StringFormat=\{0:00\}}" />
                                    <TextBlock Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{Binding DeviceName}" />
                                    <TextBlock Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Text="{Binding LogInfo}" />
                                    <Border Name="type_back" Grid.Column="3"
                                        Height="26"
                                        Margin="0,1,1,1"
                                        CornerRadius="0,13,13,0">
                                        <TextBlock Grid.Column="3"
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding LogType}" />
                                    </Border>
                                </Grid>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                    <Setter TargetName="back" Property="Visibility" Value="Visible" />
                                </Trigger>
                                <DataTrigger Binding="{Binding LogType}" Value="1">
                                    <Setter TargetName="type_back" Property="Background" Value="#66FF0000" />
                                </DataTrigger>
                                <!--<DataTrigger Binding="{Binding LogType}" Value="1">：Value可以设置为值，也可以设置为名称-->
                                <DataTrigger Binding="{Binding LogType}" Value="Fault">
                                    <Setter TargetName="type_back" Property="Background" Value="red" />
                                </DataTrigger>
